{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./",
    "skipLibCheck": true,
    "module": "UMD",
    "removeComments": true,
    "target": "ES2015",
    "types": [],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2015"
    ]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.test.ts"
  ]
}